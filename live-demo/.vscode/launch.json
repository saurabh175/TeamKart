{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "application.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open popup.html",
            "file": "templates/popup.html"
        },
        {
            "type": "chrome",
            "name": "http://127.0.0.1:3000/templates/popup.html",
            "request": "launch",
            "url": "http://127.0.0.1:3000/templates/popup.html"
        }
    ]
}